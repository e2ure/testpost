{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cliente edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_widget(edit_form,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-lg"/>
        </div>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('clientes_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger btn-lg">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
