{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productos list</h1>

    <table>
        <thead>
            <tr>
                <th>Sku</th>
                <th>Valor</th>
                <th>Inventario</th>
                <th>Estado</th>
                <th>Idproducto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td><a href="{{ path('productos_show', { 'idproducto': producto.idproducto }) }}">{{ producto.sku }}</a></td>
                <td>{{ producto.valor }}</td>
                <td>{{ producto.inventario }}</td>
                <td>{{ producto.estado }}</td>
                <td>{{ producto.idproducto }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('productos_show', { 'idproducto': producto.idproducto }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('productos_edit', { 'idproducto': producto.idproducto }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('productos_new') }}">Create a new producto</a>
        </li>
    </ul>
{% endblock %}
